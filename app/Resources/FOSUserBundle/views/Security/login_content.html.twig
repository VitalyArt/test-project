{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" class="form-horizontal" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    <div class="control-group">
        <label class="control-label" for="username">{{ 'security.login.username'|trans }}</label>
        <div class="controls">
            <input id="username" type="text" name="_username" value="{{ last_username }}" required="required"/>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="password">{{ 'security.login.password'|trans }}</label>
        <div class="controls">
            <input id="password" type="password" name="_password" required="required"/>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <div class="controls">
            <input id="remember_me" type="checkbox" name="_remember_me" value="on"/>
        </div>
    </div>

    <div class="form-actions">
        <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
        <div id="status"></div>
    </div>
</form>
